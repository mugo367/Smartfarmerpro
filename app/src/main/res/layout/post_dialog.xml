<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"

    android:layout_gravity="center"
    android:orientation="vertical"

    android:layout_height="wrap_content">

    <LinearLayout
        android:background="#09AC9D"
        android:orientation="vertical"
        android:layout_width="270dp"
        android:padding="16dp"
        android:gravity="center"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Harvest"
            android:paddingBottom="4dp"
            android:textColor="@color/White"
            android:layout_gravity="left"/>

        <Spinner
            android:id="@+id/product_title"
            android:layout_width="200dp"
            android:layout_height="match_parent"

            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"

            android:layout_marginBottom="7dp"
            android:backgroundTint="#ffff"
            android:gravity="center"
            android:padding="7dp" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/showdetails"
            android:background="@drawable/input_outline"
            android:text="SHOW DETAILS"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/White"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_marginBottom="7dp"
            android:gravity="center_horizontal" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C1F8C3"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_marginBottom="7dp"

            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:hint="Category..."
            android:padding="7dp"
            android:gravity="center"
            android:inputType="textPersonName"
            android:textColor="#000"

            android:background="@drawable/input_outline"
            android:id="@+id/product_category"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginBottom="7dp"

            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:hint="Maize Type"
            android:padding="7dp"
            android:gravity="center"
            android:textColor="#000"

            android:background="@drawable/input_outline"
            android:id="@+id/product_maizetype"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:hint="Produced On"
            android:padding="7dp"
            android:inputType="text"
            android:layout_marginBottom="7dp"
            android:textColor="#000"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:background="@drawable/input_outline"
            android:id="@+id/product_date"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:hint="Quantity..."
            android:padding="7dp"
            android:inputType="text"
            android:layout_marginBottom="7dp"
            android:textColor="#000"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:background="@drawable/input_outline"
            android:id="@+id/product_quantity"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:hint="Description..."
            android:padding="7dp"
            android:inputType="text"
            android:layout_marginBottom="7dp"
            android:textColor="#000"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:background="@drawable/input_outline"
            android:id="@+id/product_hdescription"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C1F8C3"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Image"
            android:paddingBottom="4dp"
            android:textColor="@color/White"
            android:layout_gravity="left"/>
        <ImageView
            android:layout_marginTop="7dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="4dp"

            android:background="@drawable/ic_photo_library_black_24dp"
            android:id="@+id/productImage"

            android:scaleType="centerCrop"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C1F8C3"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:hint="Unit Price..."
            android:padding="7dp"
            android:inputType="number"
            android:layout_marginBottom="7dp"

            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:background="@drawable/input_outline"
            android:id="@+id/product_price"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="match_parent"
            android:hint="Product Description..."

            android:padding="15dp"
            android:inputType="text"
            android:layout_marginBottom="7dp"
            android:lines="2"
            android:singleLine="false"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:background="@drawable/input_outline"
            android:id="@+id/product_description"
            android:layout_height="wrap_content" />




        <Button
            android:layout_width="wrap_content"
            android:text="   UPLOAD PRODUCT   "
            android:id="@+id/btnUpload"
            android:layout_gravity="center"
            android:textColor="#f16f7d"
            android:layout_marginTop="35dp"
            android:background="@drawable/custombutton"
            android:padding="9dp"
            android:layout_marginBottom="15dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</ScrollView>