<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.reports.productionReportActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolroduction"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </com.google.android.material.appbar.AppBarLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:layout_marginTop="10dp"
        android:text="VIEW PROCTION FROM"
        android:textColor="#000"
        android:layout_gravity="start"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerfarm"
        android:layout_marginTop="10dp"
        android:padding="7dp"
        android:layout_gravity="center_horizontal"
        android:spinnerMode="dropdown"
        android:paddingBottom="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/startdateproduction"
        android:padding="7dp"
        android:layout_marginTop="10dp"
        android:text="VIEW PROCTION FROM"
        android:background="@drawable/input_outline"
        android:textSize="15sp"
        android:backgroundTint="#B7E6DD"
        android:textColor="#000"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/enddateproduction"
        android:padding="7dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_outline"
        android:backgroundTint="#B7E6DD"
        android:textSize="15sp"
        android:textColor="#000"

        android:text="TO"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_gravity="center"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custombutton"
        android:text="GENERATE"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textColor="#0074FF"
        android:paddingBottom="5dp"
        android:id="@+id/generate"
        android:layout_marginTop="20dp"/>

    <com.github.barteksc.pdfviewer.PDFView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="match_parent"
        android:id="@+id/production_pdf_viewer"/>
</LinearLayout>