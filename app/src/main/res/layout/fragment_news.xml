<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"

android:background="#09AC9D"
android:layout_height="match_parent"
tools:context=".ui.news.NewsFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/horizontal">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/horizontalscrollview">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:padding="15dp"

                android:id="@+id/layoutMainnews"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/newsLabel"
                    android:text="KILIMO NEWS"
                    android:padding="7dp"
                    android:textSize="22sp"

                    android:textStyle="bold"
                    android:textColor="@color/textTabBright"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/news1Label"
                    android:text="MAIZE NEWS"
                    android:padding="7dp"
                    android:textColor="#000000"
                    android:textStyle="bold"

                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/news2Label"
                    android:text="MAIZE NEWS"
                    android:padding="7dp"
                    android:textColor="#000000"
                    android:textStyle="bold"

                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/news3Label"
                    android:text="MAIZE NEWS"
                    android:padding="7dp"
                    android:textColor="#000000"
                    android:textStyle="bold"

                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/news4Label"
                    android:text="MAIZE NEWS"
                    android:padding="7dp"
                    android:textColor="#000000"
                    android:textStyle="bold"

                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/karloLabel"
                    android:text="KARLO"
                    android:padding="7dp"
                    android:textColor="#000000"
                    android:textStyle="bold"

                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/nafisLabel"
                    android:text="NCPB"
                    android:padding="7dp"
                    android:textColor="#000000"
                    android:textStyle="bold"

                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/googleLabel"
                    android:text="GOOGLE"
                    android:padding="7dp"
                    android:textColor="#000000"
                    android:textStyle="bold"

                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

<androidx.viewpager.widget.ViewPager
    android:id="@+id/newsmainViewPager"
    android:layout_below="@+id/horizontal"
    android:layout_centerInParent="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="NotSibling">

</androidx.viewpager.widget.ViewPager>

</RelativeLayout>