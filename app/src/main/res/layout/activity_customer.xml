<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:gravity="center"
android:background="#09AC9D"
android:layout_height="match_parent"
tools:context=".ui.customer.CustomerActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/p">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolcus"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </com.google.android.material.appbar.AppBarLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"

        android:id="@+id/layoutMainmarcus"
        android:layout_below="@id/p"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/profileLabelcus"
            android:text="Products"
            android:padding="7dp"
            android:textSize="22sp"

            android:textStyle="bold"
            android:textColor="@color/textTabBright"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/usersLabelcus"
            android:text="My Cart"
            android:padding="7dp"
            android:textColor="#000000"
            android:textStyle="bold"

            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>


<androidx.viewpager.widget.ViewPager
    android:id="@+id/mainViewPagercustomer"
    android:layout_below="@+id/layoutMainmarcus"
    android:layout_centerInParent="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

</androidx.viewpager.widget.ViewPager>


</RelativeLayout>